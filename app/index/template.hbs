					<div class="ember-view filter-items-group">
						<label class="filter-headings">Tags</label>
							<div class="ember-view form-group filter-items-group">
								<div class="checkbox">
									<label class="selected-checkbox">
									{{#link-to (query-params scope='') id="all" class="ember-view" type="checkbox"}}All{{/link-to}}
									</label>
									<br>
									<label>
								   	{{#link-to (query-params scope='local') id="Local" class="ember-view"}}Local{{/link-to}}
