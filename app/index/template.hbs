<div class="jumbotron">
	<div class="container"></div>
</div>
	{{!-- sidebar --}}
	<div class="container">
		<h1 class="col-xs-12">Open Data Sites</h1>
		<h4>This is but a small sample of the current Open Data sites that exists for you to explore and draw inspiration from for your own site. You can browse by different types of sites using he navigationon the right.</h4>

		<div class=" col-xs-12 col-sm-4" id="categories">
			{{!-- <div class="row"> --}}
				<div class="list-group">
						{{#link-to (query-params scope='') class="list-group-item list-group-item-action"}}All{{/link-to}}

					   	{{#link-to (query-params scope='local') class="list-group-item list-group-item-action"}}Local{{/link-to}}
					   
					   	{{#link-to (query-params scope='state') class="list-group-item list-group-item-action"}}State{{/link-to}}
					  
					   	{{#link-to (query-params scope='national') class="list-group-item list-group-item-action"}}National{{/link-to}}
					  
					   	{{#link-to (query-params scope='international') class="list-group-item list-group-item-action"}}International{{/link-to}}
					  
					   	{{#link-to (query-params scope="ngo") class="list-group-item list-group-item-action"}}Non-governmental organizations{{/link-to}}
				</div>
		</div>


	{{!-- /sidebar --}}

		<div class="col-xs-12 col-sm-8" id="content">
			<div  class="row">				
				<br>
				    	{{#each filteredSites as |site|}}
									<div class="col-xs-12 col-md-6 col-lg-4 " id="row">
										<div class="thumbnail" >
											<a title="{{site.title}}" href="{{site.link}}" target="_blank">
												<img src="{{site.img}}" alt="...">
											</a>
											
										</div>
										<div class="caption">
											<p>{{site.title}}</p>
											<p>{{site.caption}}</p>
										</div>
									</div>

				    	{{/each}}  
				</div>
			</div>
		
	</div>

