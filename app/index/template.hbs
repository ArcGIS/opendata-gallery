								   	{{#link-to (query-params scope='national') id="national" class="ember-view"}}National{{/link-to}}
								  	</label>
								  	<br>
								  	<label>
								   	{{#link-to (query-params scope='international') id="international" class="ember-view"}}International{{/link-to}}
								  	</label>
								  	<br>
								  	<label>
								   	{{#link-to (query-params scope="ngo") id="ngo" class=" ember-view"}}Non-governmental Organizations{{/link-to}}
								   	</label>
								</div>
							</div>
					</div>
			</aside>
		</div>


	{{!-- /sidebar --}}

		<div id="content" class="col-xs-12 col-sm-8">
			<div  class="row">				
				<br>
			    	{{#each filteredSites as |site|}}
								<div class="col-xs-12 col-md-6 col-lg-4 ">
									<div class="thumbnail">
										<div class="overlay gallery-hover">
											<a title="{{site.properties.title}}" href="{{site.properties.url}}" target="_blank">
											<span class="glyphicon glyphicon-link"></span>
												<img src="{{site.properties.img}}" alt="...">
											</a>
										</div>
									</div>
										<div class="caption">
											<p class="text-center"><a title="{{site.properties.title}}" href="{{site.properties.url}}" target="_blank">{{site.properties.title}}</a></p>
												<p></p>
										</div>
									</div>

			    	{{/each}}  
								</div>
			</div>
		
	</div>

